
<%= form_for(book) do |f| %>

	<!-- 本の投稿エラー -->
      <% if book.errors.any? %>
        <div>
          <div class="error-title"><%= book.errors.count %> error prohibited this obj from being saved:
          </div>
          <ul class="error-message">
            <% book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

<table class="table">
		<div class="field row">
		<%= f.label :title %>
		<%= f.text_field :title, class: "col-xs-12 book_title" %>
		</div>

		<div class="field row">
		<%= f.label :body %> <!-- ここを変更 -->
		<%= f.text_area :body, class: "col-xs-12 book_body" %>
		</div>

		<div class="actions row">
		<%= f.submit class: "btn btn-primary col-xs-12" %>
		</div>
</table>
<% end %>