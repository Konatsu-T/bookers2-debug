<div class="container">
	<div class="row">
		<div class="col-xs-4">
			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>
			<!--同コントローラーのviewで表示ならusersは省略可 -->

			<!-- フォローする・外すリンク -->
			<% unless @user == current_user %>
				<% if current_user.following?(@user) %>
					<%= link_to 'フォロー外す', destroy_show_user_relationship_path(@user.id), method: :delete, class: "col-xs-4 btn btn-danger" %>
				<% else %>
					<%= link_to 'フォローする', create_show_user_relationship_path(@user.id), method: :post, class: "col-xs-4 btn btn-success" %>
				<% end %>
			<% end %>
			<br><br>
			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>

	<div class="col-xs-8">
		<h2>Books</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td><%= link_to(book.user) do %>
						<%= link_to attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
						</td>
						<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
						<td><i class="fa fa-comment"></i><a href="#comments"> <%= book.book_comments.count %></a></td>
				<% end %>
				</tr>
			</tbody>
		</table>
	</div>
	<!--books一覧 -->

	</div>
</div>
